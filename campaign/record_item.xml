<root>
	<windowclass name="item_main" merge="join">
		<margins control="0,0,0,2" />
		<script file="campaign/scripts/item_main2.lua" />
		<sheetdata>
			<anchor_column name="columnanchor" />
			
			<label_column name="nonid_name_label">
				<static textres="item_label_unidentified" />
			</label_column>
			<string_columnh name="nonid_name" />
			
			<label_column name="nonidentified_label">
				<static textres="item_label_unidentifiednotes" />
			</label_column>
			<string_columnh name="nonidentified" />
			
			<line_column name="divider" />
			
			<label_column name="type_label">
				<static textres="item_label_type" />
			</label_column>
			<string_columnh name="type">
				<nohide />
				<delaykeyupdate />
				<script>
					function onValueChanged()
						window.update();
						
						window.substance.onValueChanged()
					end
				</script>
			</string_columnh>

			<label_column name="subtype_label">
				<static textres="item_label_subtype" />
			</label_column>
			<string_columnh name="subtype">
				<delaykeyupdate />
			</string_columnh>

			<line_column name="divider2" />

			<label_column name="cost_label">
				<static textres="item_label_cost" />
			</label_column>
			<string_columnh name="cost" />

			<label_column name="weight_label">
				<static textres="item_label_weight" />
			</label_column>
			<number_columnh name="weight" />

			<label_column name="substance_label" insertbefore="divider3" >
				<static textres="item_label_substance" />
			</label_column>
			<string_columnh name="substance" insertbefore="divider3" >
				<script file="campaign/scripts/item__generatehhd.lua" />
			</string_columnh>
			
			<label_column name="thickness_label" insertbefore="divider3" >
				<static textres="item_label_thickness" />
			</label_column>
			<number_columnh name="thickness" insertbefore="divider3" >
				<script file="campaign/scripts/item__generatehhd.lua" />
			</number_columnh>
			
			<label_column name="size_label" insertbefore="divider3" >
				<static textres="item_label_size" />
			</label_column>
			<string_columnh name="size" insertbefore="divider3" >
				<script file="campaign/scripts/item__generatehhd.lua" />
			</string_columnh>

			<line_column name="divider2a" insertbefore="divider3" />

			<label_column name="hardness_label" insertbefore="divider3" >
				<static textres="item_label_hardness" />
			</label_column>
			<number_columnh name="hardness" insertbefore="divider3" >
				<hideonvalue>0</hideonvalue>
				<min>0</min>
			</number_columnh>
			
			<label_column name="hitpoints_label" insertbefore="divider3" >
				<static textres="item_label_hitpoints" />
			</label_column>
			<number_columnh name="hitpoints" insertbefore="divider3" >
				<script file="campaign/scripts/item__calculatedamage.lua" />
				<hideonvalue>0</hideonvalue>
				<min>0</min>
			</number_columnh>
			
			<label_column name="item_damage_label" insertbefore="divider3" >
				<static textres="item_label_damage" />
			</label_column>
			<number_columnh name="item_damage" insertbefore="divider3" >
				<script file="campaign/scripts/item__calculatedamage.lua" />
				<nodrop />
				<hideonvalue>0</hideonvalue>
				<min>0</min>
			</number_columnh>
			
			<line_column name="divider3" />

			<label_column name="damage_label">
				<static textres="item_label_damage" />
			</label_column>
			<string_columnh name="damage" />
			
			<label_column name="damagetype_label">
				<static textres="item_label_dmgtype" />
			</label_column>
			<string_columnh name="damagetype" />
			
			<label_column name="critical_label">
				<static textres="item_label_critical" />
			</label_column>
			<string_columnh name="critical" />
			
			<label_column name="range_label">
				<static textres="item_label_range" />
			</label_column>
			<number_columnh name="range" />
			
			<label_column name="ac_label">
				<static textres="item_label_ac" />
			</label_column>
			<number_columnh name="ac">
				<delaykeyupdate />
				<displaysign />
				<script>
					function onValueChanged()
						local nodeItem = window.getDatabaseNode()

						local nItemBrokenState = DB.getValue(nodeItem, 'broken')
						local nItemAc = DB.getValue(nodeItem, 'ac')

						if nItemBrokenState == 0 and string.lower(window.type.getValue()) == 'armor' then
							DB.setValue(nodeItem, 'ac.backup', 'number', nItemAc)
						end
					end
				</script>
			</number_columnh>
			
			<label_column name="maxstatbonus_label">
				<static textres="item_label_maxstat" />
			</label_column>
			<number_columnh name="maxstatbonus">
				<delaykeyupdate />
				<displaysign />
			</number_columnh>
			
			<label_column name="checkpenalty_label">
				<static textres="item_label_scp" />
			</label_column>
			<number_columnh name="checkpenalty">
				<delaykeyupdate />
				<displaysign />
				<script>
					function onValueChanged()
						local nodeItem = window.getDatabaseNode()

						local nItemBrokenState = DB.getValue(nodeItem, 'broken')
						local nItemCheckPen = DB.getValue(nodeItem, 'checkpenalty')

						if nItemBrokenState == 0 and string.lower(window.type.getValue()) == 'armor' then
							DB.setValue(nodeItem, 'checkpenalty.backup', 'number', nItemCheckPen)
						end
					end
				</script>
			</number_columnh>
			
			<label_column name="spellfailure_label">
				<static textres="item_label_spellfail" />
			</label_column>
			<number_columnh name="spellfailure">
				<delaykeyupdate />
			</number_columnh>
			
			<label_column name="speed30_label">
				<static textres="item_label_speed30" />
			</label_column>
			<number_columnh name="speed30" />
			
			<label_column name="speed20_label">
				<static textres="item_label_speed20" />
			</label_column>
			<number_columnh name="speed20" />

			<label_column name="properties_label">
				<static textres="item_label_properties" />
			</label_column>
			<string_columnh name="properties" />
			
			<line_column name="divider4" />

			<label_column name="bonus_label">
				<static textres="item_label_bonus" />
			</label_column>
			<number_columnh name="bonus">
				<delaykeyupdate />
				<script>
					function onValueChanged()
						local nodeItem = window.getDatabaseNode()

						local nItemBrokenState = DB.getValue(nodeItem, 'broken')
						local nItemBonus = DB.getValue(nodeItem, 'bonus')

						if nItemBrokenState == 0 and string.lower(window.type.getValue()) == 'armor' then
							DB.setValue(nodeItem, 'bonus.backup', 'number', nItemBonus)
						end
						
						window.substance.onValueChanged()
					end
				</script>
			</number_columnh>

			<label_column name="aura_label">
				<static textres="item_label_aura" />
			</label_column>
			<string_columnh name="aura" />

			<label_column name="cl_label">
				<static textres="casterlevel" />
			</label_column>
			<number_columnh name="cl" />

			<label_column name="prerequisites_label">
				<static textres="item_label_prereq" />
			</label_column>
			<string_columnh name="prerequisites" />
			
			<line_column name="divider5" />

			<ft_columnh name="description" />
		</sheetdata>
	</windowclass>
</root>
